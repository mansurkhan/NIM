<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NIM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Purple</item>
        <item name="colorOnPrimary">@color/White</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/AddMeds</item>
    </style>

    <style name="PrimeNavBtn" parent="Subheading">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/Purple</item>
    </style>

    <style name="SecNavBtn" parent="Subheading">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="Heading" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="Subheading" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CallOut" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Body.main" parent="Body">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.child" parent="Body">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/bg_btn_primary_action</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:textColor">@color/Purple</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AddMeds" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/SmokeWhite</item>
    </style>

    <style name="NullBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="SoftBackground">
        <item name="android:background">@color/SmokeWhite</item>
    </style>
</resources>